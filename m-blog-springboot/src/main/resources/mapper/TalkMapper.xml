<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ming.m_blog.mapper.TalkMapper">

    <resultMap id="BaseResultMap" type="com.ming.m_blog.pojo.Talk">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="images" column="images" jdbcType="VARCHAR"/>
        <result property="isTop" column="is_top" jdbcType="TINYINT"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,content,
        images,is_top,status,
        create_time,update_time
    </sql>

    <!--后台查询说说列表-->
    <select id="talkBackList" resultType="com.ming.m_blog.dto.TalkBackDTO">
        select
            t.id,
            nickname,
            avatar,
            content,
            images,
            t.is_top,
            t.status,
            t.create_time
        from talk t
        join user_info ui on  ui.id = t.user_id
        <where>
            <if test="status != null">
                t.status = #{status}
            </if>
        </where>
        ORDER BY
            t.is_top DESC,
            t.id DESC
        LIMIT #{current},#{size}
    </select>

    <!--通过id查询后台说说-->
    <select id="getTalkBackById" resultType="com.ming.m_blog.dto.TalkBackDTO">
        SELECT
            t.id,
            nickname,
            avatar,
            content,
            images,
            t.is_top,
            t.status,
            t.create_time
        FROM
            talk t
                JOIN user_info ui ON t.user_id = ui.id
        WHERE
            t.id = #{talkId}
    </select>

    <!--分页查询说说-->
    <select id="listTalks" resultType="com.ming.m_blog.dto.TalkDTO">
        SELECT
            t.id,
            nickname,
            avatar,
            content,
            images,
            t.is_top,
            t.create_time
        FROM
            talk t
                JOIN user_info ui ON t.user_id = ui.id
        WHERE
            t.status = 1
        ORDER BY
            t.is_top DESC,
            t.id DESC
        LIMIT #{current}, #{size}
    </select>

    <!--通过id查询说说-->
    <select id="getTalkById" resultType="com.ming.m_blog.dto.TalkDTO">
        SELECT
            t.id,
            nickname,
            avatar,
            content,
            images,
            t.create_time
        FROM
            talk t
                JOIN user_info ui ON t.user_id = ui.id
        WHERE
            t.id = #{talkId}
          AND t.status = 1
    </select>
</mapper>
